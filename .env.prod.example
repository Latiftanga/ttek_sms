# Django Settings
DEBUG=0
SECRET_KEY=your-super-secret-key-change-this-in-production
# Include main domain, www, wildcard subdomains for tenants, and server IP
ALLOWED_HOSTS=.ttek-sms.com,YOUR_SERVER_IP
CSRF_TRUSTED_ORIGINS=https://ttek-sms.com,https://www.ttek-sms.com
# Enable after SSL is set up
SECURE_SSL_REDIRECT=False

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-database-password
POSTGRES_DB=school_db
DATABASE_URL=postgres://postgres:your-secure-database-password@db:5432/school_db

# Redis/Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Field Encryption (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
FIELD_ENCRYPTION_KEY=your-fernet-encryption-key

# Email Configuration (platform-level emails)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=TTEK SMS <noreply@your-domain.com>

# Platform Superuser (for initial setup)
SUPERUSER_USERNAME=admin
SUPERUSER_EMAIL=admin@your-domain.com
SUPERUSER_PASSWORD=your-secure-admin-password

# NOTE: SMS API keys are NOT configured here.
# Each school (tenant) configures their own SMS provider credentials
# through the admin dashboard after registration.
