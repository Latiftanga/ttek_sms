# Django Settings
DEBUG=0
# IMPORTANT: Generate a new secret key for production
# Run: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-change-this-in-production
# Include main domain, www, wildcard subdomains for tenants, and server IP
# The leading dot allows all subdomains (e.g., .ttek-sms.com matches school1.ttek-sms.com)
ALLOWED_HOSTS=.ttek-sms.com,YOUR_SERVER_IP
# IMPORTANT: Include wildcard pattern for tenant subdomains
CSRF_TRUSTED_ORIGINS=https://ttek-sms.com,https://www.ttek-sms.com,https://*.ttek-sms.com
# Enable after SSL is set up (set to True once certificates are working)
SECURE_SSL_REDIRECT=False
# Environment name for error tracking
ENVIRONMENT=production

# Database
POSTGRES_USER=ttek_dbuser
POSTGRES_PASSWORD=ttek_dbuser_password
POSTGRES_DB=ttek_sms_db
# IMPORTANT: User must match POSTGRES_USER above
DATABASE_URL=postgres://ttek_dbuser:ttek_dbuser_password@db:5432/ttek_sms_db

# Redis/Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Field Encryption (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
FIELD_ENCRYPTION_KEY=your-fernet-encryption-key

# Email Configuration (platform-level emails)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=TTEK SMS <noreply@your-domain.com>

# Platform Superuser (for initial setup)
SUPERUSER_USERNAME=admin
SUPERUSER_EMAIL=admin@your-domain.com
SUPERUSER_PASSWORD=your-secure-admin-password

# NOTE: SMS API keys are NOT configured here.
# Each school (tenant) configures their own SMS provider credentials
# through the admin dashboard after registration.

# Public domains (show landing page instead of "School Not Found")
PUBLIC_DOMAINS=ttek-sms.com,www.ttek-sms.com

# Show public landing page on main domain (set to False for "Access Your School" page)
SHOW_PUBLIC_LANDING=True

# Database SSL mode (disable for Docker internal, require for external managed DB)
DB_SSLMODE=disable

# Django logging level
DJANGO_LOG_LEVEL=INFO

# ============================================
# ERROR TRACKING (Sentry)
# ============================================
# Sign up at https://sentry.io and create a Django project to get your DSN
# Leave empty to disable Sentry (not recommended for production)
SENTRY_DSN=
# Sample rate for performance monitoring (0.0 to 1.0, default 0.1 = 10%)
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
