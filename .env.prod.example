# =============================================================================
# TTEK SMS Production Environment Configuration
# =============================================================================
# Copy this file to .env.prod and fill in your production values
# NEVER commit .env.prod to version control!

# -----------------------------------------------------------------------------
# Core Django Settings
# -----------------------------------------------------------------------------
DEBUG=0
SECRET_KEY=your-super-secret-production-key-change-this

# Comma-separated list of allowed hosts (your domain and subdomains)
ALLOWED_HOSTS=tteksms.com,*.tteksms.com,www.tteksms.com

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgres://ttek_user:strong-password-here@db:5432/ttek_sms_db
POSTGRES_DB=ttek_sms_db
POSTGRES_USER=ttek_user
POSTGRES_PASSWORD=strong-password-here

# -----------------------------------------------------------------------------
# Redis (Celery Broker)
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------
# Use 'console' for development, 'smtp' for production
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=TTEK SMS <noreply@tteksms.com>

# -----------------------------------------------------------------------------
# SMS Configuration
# -----------------------------------------------------------------------------
# Use 'console' for development (prints to logs)
# Each school configures their own SMS provider in the admin panel
SMS_BACKEND=console

# -----------------------------------------------------------------------------
# Payment Gateway
# -----------------------------------------------------------------------------
# Each school configures their own payment gateway in the admin panel
# These are optional platform-level defaults (leave empty if not needed)
PLATFORM_PAYSTACK_SECRET_KEY=
PLATFORM_PAYSTACK_PUBLIC_KEY=

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FIELD_ENCRYPTION_KEY=your-encryption-key-here

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
DJANGO_LOG_LEVEL=WARNING
