# =============================================================================
# TTEK SMS - Railway.app Environment Variables
# =============================================================================
# These are set in the Railway dashboard under Variables

# Django Settings
DEBUG=0
SECRET_KEY=your-production-secret-key-here
ALLOWED_HOSTS=*.up.railway.app,yourdomain.com,*.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://*.up.railway.app,https://yourdomain.com,https://*.yourdomain.com

# Database - Railway provides this automatically when you add PostgreSQL
# DATABASE_URL is auto-injected by Railway

# Redis - Railway provides this automatically when you add Redis
# REDIS_URL is auto-injected by Railway

# Email (use a real provider in production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Field Encryption Key (generate a new one for production)
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FIELD_ENCRYPTION_KEY=your-encryption-key-here
